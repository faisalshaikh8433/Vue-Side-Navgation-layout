<p id="notice"><%= notice %></p>
<div class="m-1 p-1 flex justify-start items-center">
  <h1 class="text-xl font-bold">Items</h1>
  <div class="ml-auto">
    <%= link_to 'New Item', new_item_path, class:"p-2 rounded bg-blue-400 hover:bg-black hover:text-white font-bold" %>
  </div>
</div>

<div class="text-center w-full mt-2">
  <table class="table-auto">
    <thead>
      <tr class="border bg-gray-200">
        <th class="px-4 py-2">Name</th>
        <th class="px-4 py-2">Available</th>
        <th class="px-4 py-2" colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr class="hover:bg-teal-200  font-bold">
          <td class="border px-4 py-2"><%= item.name %></td>
          <td class="border px-4 py-2"><%= item.active ? "Yes" : "No" %></td>
          <td class="border px-4 py-2 "><%= link_to 'Show', item, class: "p-2 rounded" %></td>
          <td class="border px-4 py-2"><%= link_to 'Edit', edit_item_path(item),class: "p-2 rounded" %></td>
          <td class="border px-4 py-2 "><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, class: "p-2 rounded" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  
</div> 

